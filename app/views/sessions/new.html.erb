<div class="container-fluid col-6 mt-lg-4" style="background-color:white;border:5px solid black">
<div class="text-center">
<%= form_with(scope: :session, class: "shadow p-3 mb-2 rounded mx-auto",url: login_path, local: true) do |form| %>

  <div>
    <%= form.label :Email %><br>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :Password %><br>
    <%= form.text_field :password%>
  </div>
  </br>
  <div>
    <%= form.submit "Log In",books_path %>
  </div>
  </div>
  </div>
<% end %>
